<br>
<h1 class="text-center">Underground Pubs in London🍻</h1>
<br>

<% @places.each do |place| %>
  <div class="booyah-box col-8">
    <% if place.photos.present? %>
      <div class="col-12">
        <%= image_tag place.photos.last.picture, class: 'img-fluid img-index float-right' %>
      </div>
    <% end %>

    <h2><%= link_to place.name, place_path(place) %>🍻</h2>
    <i class="italic"><%= place.address %></i><br><br>
    <p class="description"><%= place.description %></p>
    <br class="clear">

    <!-- <% if place.photos.present? %>
      <div class="col-12">
        <%= image_tag place.photos.last.picture, class: 'img-fluid img-index float-right' %>
      </div>
    <% end %> -->


    <% if place.comments.present? %>
      <div class="col-12">
        <blockquote class="index">
          <% if place.comments.last.rating.present? %>
            <%= place.comments.last.rating %>
          <% end %>
          “<%= place.comments.last.message %>”
          <!-- <small><%= place.comments.last.user.email %></small> -->
        </blockquote>
      </div>
    <% end %>


    <% if place.user.present? %>
      <small class="float-right">Added by <%= place.user.email %> 🇬🇧</small>
    <% end %>
  </div>
<% end %>

<div class="col-12">
  <%= will_paginate @places, renderer: BootstrapPagination::Rails, page_links: false  %>
</div>
