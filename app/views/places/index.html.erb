<% @places.each do |place| %>
  <div class="booyah-box col-7">
    <h2><%= link_to place.name, place_path(place) %></h2>
    <i class="italic"><%= place.address %></i><br><br>
    <p class="description"><%= place.description %></p><br>

    <% if place.user.present? %>
      <small class="float-right">Added/updated by <%= place.user.email %></small>
    <% end %>
  </div>
<% end %>

<div class="col-12">
  <%= will_paginate @places, renderer: BootstrapPagination::Rails, page_links: false  %>
</div>
