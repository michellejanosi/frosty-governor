<div class="booyah-box col-6 well clearfix">
  <h2><%= @place.name %>🍻</h2>
  <i class="italic"><%= @place.address %></i>
  <br><br>
  <p class="description"><%= @place.description %></p>
  <%= link_to 'Delete', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger float-right' %>
  <%= link_to 'Edit ✍️', edit_place_path(@place), class: 'btn btn-secondary float-right' %>
</div>
